
<h2>Изменение ролей для пользователя @ViewBag.EditRole.UserEmail</h2>

<form asp-action="Edit" method="post">
    <input type="hidden" name="userId" value=@ViewBag.EditRole.UserId />
    <div class="form-group">
        @foreach (IdentityRole role in ViewBag.EditRole.AllRoles)
        {
            <input type="checkbox" name="roles" value="@role.Name"
                   @(ViewBag.EditRole.UserRoles.Contains(role.Name) ? "checked=\"checked\"" : "") />@role.Name <br />
            }
    </div>
    
    <button type="submit" class="btn btn-primary">Сохранить</button>
</form>
<a asp-action="UserList">Список пользователей</a>
<a asp-action="Index">Список ролей</a>
