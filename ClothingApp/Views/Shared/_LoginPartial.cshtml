@using Microsoft.AspNetCore.Identity
@inject SignInManager<ApplicationUser> SignInManager
@inject UserManager<ApplicationUser> UserManager


@if (SignInManager.IsSignedIn(User))
{
    
    <a  class="login" asp-area="Identity" asp-page="/Account/Manage/Index" title="Manage">Добро пожаловать, @User.Identity.Name!</a>
    <form  class="form-inline" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Action("Index", "Home", new { area = "" })">
          <button  type="submit" class="nav-link btn btn-link text-dark">Выйти</button>
    </form>
   
}
else
{    
    <a class="login" asp-area="Identity" asp-page="/Account/Register">Регистрация</a>
    <a class="nav-link" asp-area="Identity" asp-page="/Account/Login">Вход</a>    
}
